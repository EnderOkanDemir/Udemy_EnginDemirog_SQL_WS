SELECT Country from Customers group by Country											
SELECT Country,Count(*) as Adet from Customers group by Country											
SELECT Country, City, Count(*) as Adet from Customers group by Country, City											
SELECT Country, City, Region, Count(*) as Adet from Customers group by Country, City, Region											group by' dan sonra hangi column ismini yazıyorsak select' ten sonra da o column ismini yazmalıyız
											
Select gruplamak istediğimiz kolonlar (sonuncusundan sonra virgül olmalı)											
from gruplayacağımız kolonları içeren tablo ismi 											
group by gruplamak istediğimiz kolonların ismi											
											
Select Country, City, Count(*) as Adet											
from Customers											
group by Country, City											
having Count(*)>1  -- çağırdığımız sorgu sonucu oluşan tabloda filtreleme işlemi yapar											
order by Country											
				Country	City	Adet					
				Argentina	Buenos Aires	3					
				Brazil	Rio de Janeiro	3					
				Brazil	Sao Paulo	4					
				France	Nantes	2					
				France	Paris	2					
				Mexico	México D.F.	5					
				Portugal	Lisboa	2					
				Spain	Madrid	3					
				UK	London	6					
				USA	Portland	2					
											
											
											
Select Country, City, Count(*) as Adet											
from Customers											
where City != 'Nantes'  -- !=  yerine <> gösterimini de kullanabiliriz											
group by Country, City											
having Count(*)>1  -- çağırdığımız sorgu sonucfiltreleme işlemi yapar											
order by Country											
											
											
Select * 						Products ile Categories tablolarını Products'taki CategoryID ve Categories'teki CategoryID ortak kolonlarını kullanarak birleştir					
from Products inner join Categories						Bu sorgu sonucunda Products ve Categories tablolarında bulunan CategoryID sindeki eşleşen yani her ikisinde de ortak bulunan veriler gelecektir					
on Products.CategoryID = Categories.CategoryID											
											
from Products inner join Categories											
on Products.CategoryID = Categories.CategoryID											
where Products.UnitPrice > 20											
order by Categories.CategoryID											
											
Select * 											
from Products as P inner join Categories as C											
on P.CategoryID = C.CategoryID											
where P.UnitPrice > 20											
order by C.CategoryID											
											
Select * 						NOT : ctrl + space ile tablo listesi açılıyor					
from Products as P inner join [Order Details] as OD											
on P.ProductID = OD.ProductID											
inner join Orders as O											
on O.OrderID = OD.OrderID											
											
											
