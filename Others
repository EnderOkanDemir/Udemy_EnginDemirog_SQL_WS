Select TOP (3) [ProductName] from Products

Select COUNT (*) as UrunSayisi from Products

Select COUNT (*) as [Ürün Sayısı] from Products

Select COUNT (Region) from Customers

Select * from Products where CategoryID in (1,2,5,8)
-- Returns only those whose CategoryID is equal to 1, 2, 5 or 8, i.e. those in parentheses

Select * from Products where CategoryID between 3 and 5
-- It returns only those with CategoryIDs 3,4 and 5

Select MIN(UnitPrice) from Products

Select Max(UnitPrice) from Products

Select Avg(UnitPrice) from Products

Select Sum(UnitPrice) from [Order Details]
Select Sum(UnitPrice) as Revenue from [Order Details]
Select Sum(UnitPrice*Quantity) as Revenue from [Order Details]

Select RAND()

SELECT RAND() * 5 + 2;  -- Generating random numbers between 2 and 7 The right value 2 in the 5+2 operation is treated as the lower limit		
SELECT RAND() * 2 + 5;  -- Generating random numbers between 5 and 7 The right value 5 in the 2+5 operation is treated as the lower limit


